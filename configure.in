if test "X_$ONE" = "X_1" ; then
   echo yes
   EGREP_PROBLEMS="no"
else
   echo no
fi
export EGREP_PROBLEMS
AC_SUBST(EGREP_PROBLEMS)

dnl test for grep --binary-files=text compatibility problems when filtering flex/lex output
